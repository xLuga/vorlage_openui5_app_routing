<mvc:View controllerName="master.app.controller.Profil" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:c="sap.ui.core" displayBlock="true">
    <Page title="Mein Profil" titleAlignment="Center">
        <headerContent>
            <OverflowToolbar>
                <OverflowToolbarButton icon="sap-icon://save" press="onSave" />
            </OverflowToolbar>
        </headerContent>
        <content>
            <Panel headerText="Persönliche Daten">
                <HBox>
                    <Input id="benutername" description="Benutzername" placeholder="Benutzername" value="{profil>/personal/benutzername}" width="13rem" editable="false" class="sapUiSmallMarginBegin" />
                </HBox>

                <HBox>
                    <Input id="vorname" description="Vorname" placeholder="Vorname" value="{profil>/personal/vorname}" width="10rem" editable="false" class="sapUiSmallMarginBegin" />
                    <Input id="nachname" description="Nachname" placeholder="Nachname" value="{profil>/personal/nachname}" width="10rem" editable="false" />
                </HBox>

                <HBox>
                    <Input id="geschlecht" description="Geschlecht" placeholder="Geschlecht" value="{profil>/personal/geschlecht}" width="12rem" class="sapUiSmallMarginBegin" editable="false" />
                    <Input id="alter" description="Alter" width="5rem" placeholder="Alter" value="{profil>/personal/alter}" editable="false" />
                </HBox>
            </Panel>

            <Panel headerText="Fitness Daten">
                <HBox>
                    <Input id="gewicht" description="Gewicht" placeholder="KG" width="8rem" value="{profil>/gym/gewicht}" class="sapUiSmallMarginBegin" />
                    <Input id="groesse" description="Größe" placeholder="CM" width="7rem" value="{profil>/gym/groesse}" />
                    <Input id="kfa" description="KFA" placeholder="15%" width="7rem" value="{profil>/gym/körperfett}" />
                </HBox>
            </Panel>

            <Panel headerText="Kcal Bedarf">
                <VBox>
                    <Input id="grundbedarf" description="Grundbedarf" width="12rem" editable="false" class="sapUiSmallMarginBegin" />
                    <Input id="leistungsumsatz" description="Leistungsumsatz" width="14rem" editable="false" class="sapUiSmallMarginBegin" />
                    <Input id="diaet" description="Diät" width="14rem" editable="false" class="sapUiSmallMarginBegin" />
                    <Input id="masse" description="Massephase" width="14rem" editable="false" class="sapUiSmallMarginBegin" />
                    <HBox>
                        <Input id="schlaf" description="Schlaf" width="8rem" class="sapUiSmallMarginBegin" />
                    </HBox>

                    <HBox>
                        <Input id="training" description="Training" width="8rem" class="sapUiSmallMarginBegin" />
                        <Input id="activity_training" description="Aktivität" width="13rem" class="sapUiSmallMarginBegin" />
                    </HBox>

                    <HBox>
                        <Input id="arbeit" description="Arbeit" width="8rem" class="sapUiSmallMarginBegin" />
                        <Input id="activity_arbeit" description="Aktivität" width="13rem" class="sapUiSmallMarginBegin" />
                    </HBox>

                    <HBox>
                        <Input id="freizeit" description="Freizeit" width="8rem" class="sapUiSmallMarginBegin" />
                        <Input id="activity_freizeit" description="Aktivität" width="13rem" class="sapUiSmallMarginBegin" />
                    </HBox>

                    <Button id="calc_kcal" text="Bedarf berechnen" press="onCalc" class="sapUiSmallMarginBegin" type="Success" />
                </VBox>
            </Panel>
        </content>
        <customHeader />
        <footer>
            <c:Fragment fragmentName="master.app.view.FooterToolbar" type="XML" />
        </footer>
        <headerContent />
        <landmarkInfo />
        <subHeader />
    </Page>
</mvc:View>
